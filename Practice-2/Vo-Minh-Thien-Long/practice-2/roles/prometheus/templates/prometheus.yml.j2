---
global:
  scrape_interval: {{ scrape_interval }}

scrape_configs:
- job_name: prometheus
  static_configs:
  - targets:
{% for server in groups['monitor'] %}
    - {{ server }}:9090
{% endfor %}

- job_name: node
  static_configs:
  - targets:
{% for server in groups['nodes'] %}
    - {{ server }}:9100
{% endfor %}
